<% content_for :page_title do %>
  <%= Spree.t(:edit_retailer_type) %>
<% end %>

<%= render :partial => 'spree/admin/shared/retailer_sub_menu' %>

<% if @retailer_type.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @retailer_type %>
<% end %>

<%= form_for([:admin, @retailer_type]) do |f| %>
  <%= render "form", :form => f %>
  <p class="form-buttons">
    <%= button t("update") %> <%= t('or') %> <%= link_to t('cancel'), collection_url %>
  </p>
<% end %>

<%= render "spree/admin/retailer_types/select_configuration_tab" unless request.xhr? %>
