<h1><%= @retailer.name %></h1>
<p>
  <%= @retailer.address %>
  
  <% if @retailer.has_address2? %>
    <br/>
    <%= @retailer.address2 %>
  <% end %>
  
  <br/>
  
  <%= @retailer.city %>, 
  <%= @retailer.state %> 
  <%= @retailer.zipcode %> 

  <% if @retailer.has_phone? %>
    <br/>
    <%= @retailer.phone %>
  <% end %>
  
  <% if @retailer.has_email? %>
    <br/>
    <%= mail_to @retailer.email %>
  <% end %>
  
  <% if @retailer.has_url? %>
    <br/>
    <%= link_to @retailer.url, @retailer.url, :class => 'popup' %>
  <% end %>
</p>


<p>
  <%= link_to_edit @user %> &nbsp;
  <%= link_to t('back'), collection_url %>
</p>
